@model IEnumerable<TaskLog2ndGen.Models.Team>

<h2>List of Teams</h2>

<p>
    @Html.ActionLink("Create Team", "Create", null, new { @class = "btn btn-secondary" })
</p>

<table class="table table-bordered table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <a href=@("/Teams/Details/" + item.teamId)>@Html.DisplayFor(modelItem => item.name)</a>
            </td>
        </tr>
    }
</table>